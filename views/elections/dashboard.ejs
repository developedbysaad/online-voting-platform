<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../layout/head.ejs") %>
  <%- include("script.ejs") %>
</head>

<body class="bg-body text-white">
  <%- include("header.ejs") %>
  <!-- Election is live -->
    <div class="container mx-auto flex justify-between p-5">
        <div></div>
        <div class="flex ml-20 pl-10">
      <div class="animate-pulse rounded-full bg-red-600 h-10 w-10"></div>
      <p class="pl-5 text-4xl text-selected-text"> Election is <span class="text-red-500 font-bold animate-pulse">Live</span> </p>
    </div>
    <!-- Button to end election -->
      <button onclick="endElection(<%= election.id %>)" type="submit" class="bg-red-400 boder-2 px-6 py-2 rounded-3xl hover:bg-red-500 text-white">End this Election</button>
    </div>

    
   <div class="mx-auto flex justify-center text-2xl">
    <p class="font-semibold text-gray-400">Public URL :</p> &nbsp;<a href="/e/<%=election.customUrl%>/vote" target="_blank"> &nbsp; <span class="text-blue-400">/e/<%=election.customUrl%>/vote &nbsp; <i class="fa fa-external-link-alt animate-bounce"></i></span></a>
    <a href="/election/<%= election.id %>" class="-mr-10 ml-10 text-white bg-red-400 px-4 rounded-3xl pb-2 pl-5 pt-1"> <i class="fa fa-edit"></i></a>
   </div>


   
   <!-- view Live result -->

   <div class="container flex mx-auto w-5/6  pt-8">
     <a href="/election/<%= election.id %>/voter" class="bg-red-400 boder-2 px-6 py-2 rounded-3xl hover:bg-red-500 text-white">Manage Voters &nbsp;<i class="fa fa-external-link-alt animate-bounce"></i></a>   
       <a href="/e/<%= election.customUrl %>/result" class="bg-red-400 boder-2 px-6 py-2 mx-auto rounded-3xl hover:bg-red-500 text-white">View Live Result &nbsp;<i class="fa fa-external-link-alt animate-bounce"></i></a>   
       <p class="pt-2 text-gray-300 text-xl"><%= votesCount %> / <%= totalVoters %> Voters voted</p>
    </div>


     

    <!-- no of Voters -->
    
    <%- include("votersList.ejs",) %>

  <%- include("../layout/footer.ejs") %>
</body>

</html>